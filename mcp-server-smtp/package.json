{
  "name": "mcp-smtp-server",
  "version": "1.0.0",
  "description": "SMTP Email MCP Server with template management for AI agents and applications",
  "main": "build/index.js",
  "type": "module",
  "keywords": [
    "mcp",
    "smtp",
    "email",
    "ai",
    "agent",
    "server",
    "model-context-protocol"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/smtp-server-kkagain.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/smtp-server-kkagain/issues"
  },
  "homepage": "https://github.com/yourusername/smtp-server-kkagain#readme",
  "bin": {
    "mcp-smtp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "watch": "tsc --watch",
    "dev": "npm run build && npm start",
    "setup": "node scripts/setup.js",
    "clean": "rimraf build",
    "docs:dev": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "docker:build": "docker build -t smtp-mcp-server .",
    "docker:run": "docker run -d --name smtp-server --env-file .env -p 3008:3008 smtp-mcp-server",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up --build -d",
    "docker:stop": "docker stop smtp-server",
    "docker:clean": "docker stop smtp-server && docker rm smtp-server",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "@supabase/supabase-js": "^2.38.4",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dkim-signer": "^0.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fs-extra": "^11.1.1",
    "geoip-lite": "^1.4.8",
    "helmet": "^7.1.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.5",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "useragent": "^2.3.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.27",
    "@types/nodemailer": "^6.4.13",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
