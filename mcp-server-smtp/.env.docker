# Docker Environment Configuration for SMTP MCP Server
# Copy this to .env for Docker deployment

# Server Configuration
PORT=3008
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration (SQLite for simplicity)
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/smtp-server.db

# SMTP Configuration
# ⚠️ IMPORTANT: Replace with your actual SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# Security Configuration
# ⚠️ IMPORTANT: Change these secrets for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-here

# Feature Configuration
ENABLE_TEMPLATES=true
ENABLE_RATE_LIMITING=true
ENABLE_BULK_EMAIL=true
ENABLE_SWAGGER=true

# API Documentation
SWAGGER_UI_PATH=/docs

# Optional: Advanced Database Configuration
# For PostgreSQL (comment out SQLite config above)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://username:password@postgres:5432/smtp_server
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=smtp_server
# POSTGRES_USER=smtp_user
# POSTGRES_PASSWORD=your_password

# Optional: Redis Configuration
# REDIS_URL=redis://redis:6379
# REDIS_HOST=redis
# REDIS_PORT=6379
