# SMTP MCP Server Environment Configuration
# Universal SMTP Server - Configure only what you need

# Server Configuration
PORT=3008
LOG_LEVEL=info
NODE_ENV=production

# Database Configuration (Default: SQLite for universal deployment)
DATABASE_TYPE=sqlite
DATABASE_URL=./data/smtp_server.db

# PostgreSQL Configuration (Optional - for self-hosted database)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://username:password@localhost:5432/smtp_server
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=smtp_server
# POSTGRES_USER=smtp_user
# POSTGRES_PASSWORD=your_password

# Supabase Configuration (Optional - for multi-user apps with authentication)
# NOTE: These will be provided by the AI agent app when integrating
# DATABASE_TYPE=supabase
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_KEY=your_service_key

# Redis Configuration (Optional - for advanced queuing)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Default SMTP Configuration (Optional - can be managed via API)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Basic Security Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
API_KEY_REQUIRED=false
# API_KEY=your-api-key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_EMAILS=100
RATE_LIMIT_MAX_REQUESTS=1000

# Bulk Email Configuration
DEFAULT_BATCH_SIZE=10
DEFAULT_DELAY_BETWEEN_BATCHES=1000
MAX_BULK_SIZE=1000

# Logging Configuration
LOG_TO_FILE=true
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# API Documentation
ENABLE_API_DOCUMENTATION=true
SWAGGER_UI_PATH=/docs
